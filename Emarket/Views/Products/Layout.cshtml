@model IEnumerable<Emarket.Models.Product>

@{
    ViewBag.Title = "Layout";
}

<h2>Layout</h2>


<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <img src="@Url.Content(item.image)" alt="..." width="242" height="200">
                <div class="caption">
                    <h3>@item.name</h3>
                    <p>Price:@item.price</p>
                    <p><a href="#" class="btn btn-primary" role="button">More info</a> </p>
                </div>
            </div>
        </div>
    }
</div>

