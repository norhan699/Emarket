@model Emarket.Models.Product
   

@{
    ViewBag.Title = "MoreInfo";
}
<br />
<div>
    <table class="table table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category.name)
            </th>
        </tr>

        <tr>
            <td>
                @Html.DisplayFor(modelItem => modelItem.name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => modelItem.price)
            </td>
            <td>
                @if (Model.category_id == 1)
                {
                    <p>Moblie</p>
                }
                @if (Model.category_id == 2)
                {<p>Clothes</p>}
                @if (Model.category_id == 3)
                {<p>Laptops</p>}
                @if (Model.category_id == 9)
                {<p>Make up</p>}
                @if (Model.category_id == 10)
                {<p>Shoes</p>}
                @if (Model.category_id == 11)
                {<p>Houseware</p>}
                @if (Model.category_id == 13)
                {<p>Electrical Devices</p>}
            </td>

        </tr>
    </table>
    <div style="text-align:center;background-color:aqua;font-size:40px">
        @Html.DisplayFor(modelItem => modelItem.name) -      @Html.DisplayFor(modelItem => modelItem.price)
        @if (Model.category_id == 1)
        {  <p>Moblie</p>}
        @if (Model.category_id == 2)
        {<p>Clothes</p>}
        @if (Model.category_id == 3)
        {<p>Laptops</p>}
        @if (Model.category_id == 9)
        {<p>Make up</p>}
        @if (Model.category_id == 10)
        {<p>Shoes</p>}
        @if (Model.category_id == 11)
        {<p>Houseware</p>}
        @if (Model.category_id == 13)
        {<p>Electrical Devices</p>}
    </div>
    
</div>
<div class="thumbnail" style="width:100%">
    <img src="@Url.Content(Model.image)" alt="..." style="width:100%;max-width:100%;height:80%;max-height:80%;display:inline-block;" />
</div>

<div style="text-align:center">
    <h3>  @Html.DisplayFor(modelItem => modelItem.description) </h3>
</div>
<p>

    <a href="#" class="btn btn-primary" role="button">Update</a>                                       <a href="#" class="btn btn-primary" role="button">Delete</a>

</p>
